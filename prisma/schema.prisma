datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  login      String
  password   String
  version    Int      @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  FavArtists Artist[]
  FavAlbums  Album[]
  FavTracks  Track[]
}

model Artist {
  id        String  @id @default(uuid())
  name      String
  grammy    Boolean
  Albums    Album[]
  Tracks    Track[]
  FavByUser User[]
}

model Album {
  id        String  @id @default(uuid())
  name      String
  year      Int
  artistId  String?
  artist    Artist?  @relation(fields: [artistId], references: [id])
  Tracks    Track[]
  FavByUser User[]
}

model Track {
  id        String  @id @default(uuid())
  name      String
  artistId  String?
  albumId   String?
  duration  Int
  Album     Album?  @relation(fields: [albumId], references: [id])
  Artist    Artist? @relation(fields: [artistId], references: [id])
  FavByUser User[]
}
